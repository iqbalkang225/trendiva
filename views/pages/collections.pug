extends ../base.pug
include ../partials/vertical-titles

block variables
  - const template = 'collections'

  - const collectionsContainer = 'relative h-screen bg-red-400 overflow-hidden'

  - const collectionsGallery = 'absolute top-1/2 -translate-y-1/2'
  - const collectionGalleryWrapper = 'flex gap-x-16'

  - const imageWrapper = 'w-[30rem] h-[40rem]'
  - const image = 'image'

  - const collectionInfoContainer = 'absolute bottom-16 left-16 max-w-xl'
  - const collectionInfoTitle = 'collection-heading'



  

block content
  #collections(class=collectionsContainer)
    #collection__wrapper 

      +vertical-titles(collections)

      #collections__gallery(class=collectionsGallery)
        #collection__gallery__wrapper(class=collectionGalleryWrapper)
          each collection in collections
            each item in collection.data.products 
              a(href="#") 
                figure(class=imageWrapper)
                  img(src=item.product.data.image.url class=image)

      #collection__content
        each collection,index in collections 
          article(class=`${index !== 0 ? 'hidden' : '' } ${collectionInfoContainer} `)
            h2(class=collectionInfoTitle)=`${collection.data.title} collection`
            p=collection.data.description
